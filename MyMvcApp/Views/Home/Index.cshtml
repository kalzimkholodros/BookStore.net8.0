@model HomeViewModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="text-center">
    <div class="book-magic-container">
        <img src="/images/kitap.jpg" alt="Book Magic" class="book-magic-image" />
    </div>
</div>

<div class="container">
    <!-- Featured Books -->
    <h2 class="mb-4">Bunları da Beğenebilirsiniz</h2>
    <div class="row mb-5">
        @foreach (var book in Model.FeaturedBooks)
        {
            <div class="col-md-2 mb-4">
                <div class="card h-100">
                    <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@book.Title</h5>
                        <p class="card-text text-truncate">@book.Author</p>
                        <p class="card-text"><strong>@book.Price.ToString("C")</strong></p>
                        <a href="@Url.Action("Details", "Books", new { id = book.Id })" class="btn btn-primary btn-sm">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Popular Books -->
    <h2 class="mb-4">Popüler Kitaplar</h2>
    <div class="row mb-5 flex-nowrap overflow-auto">
        @foreach (var book in Model.PopularBooks)
        {
            <div class="col-md-2">
                <div class="card h-100">
                    <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@book.Title</h5>
                        <p class="card-text text-truncate">@book.Author</p>
                        <p class="card-text"><strong>@book.Price.ToString("C")</strong></p>
                        <a href="@Url.Action("Details", "Books", new { id = book.Id })" class="btn btn-primary btn-sm">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Discounted Books -->
    <h2 class="mb-4">İndirimdeki Kitaplar</h2>
    <div class="row mb-5 flex-nowrap overflow-auto">
        @foreach (var book in Model.DiscountedBooks)
        {
            <div class="col-md-2">
                <div class="card h-100">
                    <div class="position-absolute top-0 end-0 p-2">
                        <span class="badge bg-danger">İndirim!</span>
                    </div>
                    <img src="@book.ImageUrl" class="card-img-top" alt="@book.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@book.Title</h5>
                        <p class="card-text text-truncate">@book.Author</p>
                        <p class="card-text">
                            <del class="text-muted">@book.Price.ToString("C")</del>
                            <strong class="text-danger">@book.DiscountedPrice?.ToString("C")</strong>
                        </p>
                        <a href="@Url.Action("Details", "Books", new { id = book.Id })" class="btn btn-primary btn-sm">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        /* Custom scrollbar for horizontal scroll */
        .overflow-auto::-webkit-scrollbar {
            height: 8px;
        }

        .overflow-auto::-webkit-scrollbar-track {
            background: #f1f1f1;
            border-radius: 4px;
        }

        .overflow-auto::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }

        .overflow-auto::-webkit-scrollbar-thumb:hover {
            background: #555;
        }

        .book-magic-container {
            max-width: 1200px;
            margin: 1rem auto;
            padding: 1rem;
        }

        .book-magic-image {
            width: 100%;
            height: 300px;
            object-fit: cover;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
    </style>
}
