@model MyMvcApp.Models.Book

@{
    ViewData["Title"] = "Kitap Sil";
}

<h1>Kitap Sil</h1>

<h3>Bu kitabı silmek istediğinizden emin misiniz?</h3>
<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
        }
        else
        {
            <img src="/images/no-image.jpg" class="img-fluid rounded" alt="No Image">
        }
    </div>
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Başlık</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Yazar</dt>
            <dd class="col-sm-9">@Model.Author</dd>

            <dt class="col-sm-3">Fiyat</dt>
            <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-3">Açıklama</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Stok Miktarı</dt>
            <dd class="col-sm-9">@Model.StockQuantity</dd>

            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9">@Model.ISBN</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="mt-3">
                <input type="submit" value="Sil" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </div>
        </form>
    </div>
</div> 